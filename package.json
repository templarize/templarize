{
  "name": "templarize",
  "version": "0.1.0",
  "description": "A package to quickly build from template files",
  "bin": {
    "templarize": "cli.js"
  },
  "scripts": {
    "remove": "rimraf dist",
    "dev": "ts-node src/index.ts",
    "build": "npm run remove && tsc",
    "prepare": "npm run build",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/templarize/templarize.git"
  },
  "engines": {
    "node": "^18.17.0 || >=20.5.0"
  },
  "keywords": [
    "templarize"
  ],
  "author": "templarize",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/templarize/templarize/issues"
  },
  "homepage": "https://github.com/templarize/templarize#readme",
  "devDependencies": {
    "@types/node": "^20.11.25",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "rimraf": "^5.0.5"
  }
}
