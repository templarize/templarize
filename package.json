{
  "name": "templarize",
  "version": "0.1.0",
  "description": "A package to quickly build from template files",
  "type": "commonjs",
  "bin": {
    "templarize": "cli.js"
  },
  "scripts": {
    "build": "rimraf dist && tsc --project tsconfig.build.json && yarn minify",
    "dev": "ts-node src/index.ts",
    "format": "prettier --write 'src/**/*.ts'",
    "minify": "node terser.js",
    "prepare": "husky && yarn build",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/templarize/templarize.git"
  },
  "keywords": [
    "templarize"
  ],
  "author": "templarize",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/templarize/templarize/issues"
  },
  "homepage": "https://github.com/templarize/templarize#readme",
  "devDependencies": {
    "@types/node": "^20.11.26",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "6.0.0",
    "eslint": "^8.0.1",
    "eslint-config-love": "^43.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "5.3.3",
    "vite": "^5.1.6",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.4.0"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "rimraf": "^5.0.5",
    "terser": "^5.29.1"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn lint:fix",
      "yarn format"
    ]
  }
}
