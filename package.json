{
  "name": "templarize",
  "version": "0.1.0",
  "description": "A package to quickly build from template files",
  "keywords": [
    "templarize"
  ],
  "homepage": "https://github.com/templarize/templarize#readme",
  "bugs": {
    "url": "https://github.com/templarize/templarize/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/templarize/templarize.git"
  },
  "license": "MIT",
  "author": "templarize",
  "type": "commonjs",
  "bin": {
    "templarize": "scripts/cli.js"
  },
  "scripts": {
    "build": "rimraf dist && node scripts/build.js",
    "dev": "ts-node src/index.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check 'src/**/*.ts'",
    "format:write": "prettier --write 'src/**/*.ts'",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prepare": "husky && yarn build",
    "sort": "sort-package-json",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn lint:fix",
      "yarn format"
    ]
  },
  "dependencies": {
    "columnify": "^1.6.0",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/columnify": "^1.5.4",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "7.10.0",
    "esbuild": "^0.21.3",
    "eslint": "^8.56.0",
    "eslint-config-love": "^47.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.x",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.4",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.7",
    "sort-package-json": "^2.10.0",
    "ts-node": "^10.9.2",
    "typescript": "5.4.5",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  },
  "engines": {
    "npm": "Please use yarn instead of npm"
  }
}
